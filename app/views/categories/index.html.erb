<% content_for :body do %>

<h1 align="center">All Categories</h1>
<div align="center">
  <%= will_paginate %>
    <% @categories.each do |category| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-xs-4 col-xs-offset-4">
            <li class="article-title">
              <%= link_to "#{category.name}", category_path(category) %>
            </li>
            <li> <small><%= pluralize(category.articles.count, "article") %></small></li>
            <li> 
              <% if logged_in? && current_user.admin? %>
                <div class="article-actions">
                  <%= link_to "Edit this category", edit_category_path(category), class: "btn btn-xs btn-primary" %>   
                </div>
              <% end %> 
            </li>
          </div>
        </div>
      </ul>
    <% end %>
  <%= will_paginate %>
</div>
<% end %>