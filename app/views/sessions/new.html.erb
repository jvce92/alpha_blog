<% content_for :body do %>
  <h1 align="center">Log in</h1>
  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="article-title">
          <%= f.label :email %><br>
        </label>
        <div class="col-xs-8">
          <%= f.email_field :email , class: "form-control", id: "article-title", placeholder: "E-mail", autofocus: true  %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2" for="article-description">
          <%= f.label :password %><br>
        </label>
        <div class="col-xs-8">
          <%= f.password_field :password , class: "form-control", id: "article-description", autocomplete: "off", autofocus: true  %>
        </div>
      </div>
      
      <div class ="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit("Log in", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
      
    <% end %>
<% end %>